    initMap(<%= response.place_lat %>, <%= response.place_lon%>);
}, false);
  <% }) %>

  function initMap(x,y) {
    var mapDiv = document.getElementById('map')
    var map = new google.maps.Map(mapDiv, {
      center: {lat: x , lng: y},
      zoom: 20
    });
  }
  </script>
